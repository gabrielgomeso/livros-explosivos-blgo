<div class="container">
  <div class="column">
    <% if @post.featured_image.attached? %>
      <figure class="image is-3by1">
        <%= image_tag @post.featured_image %>
      </figure>
    <% end %>
    <div class="columns">
      <div class="column">
        <p class="title"><%= @post.title %></p>
        <p>Visualizações: <%= @post.hits %></p>
        <p><strong> Por: </strong><%= @post.author %></p>
        <p><strong> Publicado em: </strong> <%= @post.created_at.strftime("%d/%m/%Y") %></p>
        <% if @post.updated_at.strftime("%d/%m/%Y") != @post.created_at.strftime("%d/%m/%Y") %>
          <p><strong> Editado em: </strong> <%= @post.updated_at.strftime("%d/%m/%Y") %></p>
        <% end %>
        <% @post.tag_list.each do |tag| %>
          <p class="tag has-text-white is-link is-italic is-info"><%= link_to tag, tag_path(id: find_tag_by_name(tag))%></p>
        <% end %>

      </div>
    </div>
    <div class="columns">
        <div class="column"><%= @post.content %>
    </div>
  </div>
</div>