<nav>
  <div class="nav-menu">
    <ul>
      <li>Início</li>
      <li>Sobre</li>
      <li>Contato</li>
    </ul>
  </div>
  <div class="nav-socials">
    <i class="fa fa-twitter"></i>
    <i class="fa fa-instagram"></i>
  </div>
  <div class="nav-search">
    <i class="fa fa-search"></i>
  </div>
</nav>

<section class="logo">
  <h1 class="title is-1">LIVROS EXPLOSIVOS</h1>
  <!-- <img src="" alt=""> -->
</section>

<div class="container">
  <section class="columns is-mobile">
    <div class="content-main column is-four-fifths">
      <div class="container">
        <% @posts.each do |post| %>
        <div class="">
          <div class="card mb-2">
            <% if post.featured_image.attached? %>
              <div class="card-image">
                <figure class="image is-full  is-3by1">
                  <%= image_tag post.featured_image %>
                </figure>
              </div>
            <% end %>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <a href="<%= post_path(id: post.id) %>"><p class="title is-4"><%= post.title %></p></a>
                </div>
              </div>
              <p>
                <%= truncate(strip_tags(post.content.to_s), length: 120) %> <%= link_to "Leia mais", post_path(post) %>
              </p>
              <p>Autor: <%= post.author %> </p>
              <p>Visualizações: <%= post.hits %></p>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>

    <div class="content-side-bar column is-narrow">
      <div class="container mb-5 search">
        <div class="field">
          <p class="control has-icons-right">
            <input class="input" type="text" placeholder="Digite e busque algo">
            <span class="icon is-small is-right">
              <i class="fa fa-search"></i>
            </span>
          </p>
        </div>
      </div>

      <div class="container mb-5 about has-background-primary">
        <div class="container image is-4by5">
          <%= image_tag("gabriel.jpg", :alt => "Gabriel feliz comendo um hamburguer") %>
        </div>
        
        <p class="column is-1 about-text">Meu nome é Gabriel Gomes e eu escrevo minha opinião não requisitada sobre as coisas que leio, assisto e faço. </p>
      </div>

      <div class="container mb-5 telegram-link has-background-link">
        Entre no nosso canal do Telegram
      </div>

      <div class="container mb-5 register-newsletter has-background-success">
        <label for="email">Digite seu e-mail</label>
        <input type="email" name="" id="">
        <button type="submit">Enviar</button>
      </div>

      <div class="container mb-5 recommended-books has-background-warning">a</div>

      <div class="container mb-5 google-ads has-background-danger">a</div>

      <div class="container mb-5 tags has-background-info">
        a
      </div>
    </div>
  </section>
</div>

<footer>
  <div class="container socials-links"></div>
  <div class="container rights"></div>
</footer>

